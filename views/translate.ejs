<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Translation web</title>
    <link rel="shortcut icon" type="image/png" href="../public/images/logos/seodashlogo.png" />
    <link rel="stylesheet" href="../public/css/styles.min.css" />
    <style>
        .container {
            margin-top: 50px;
        }

        .translate-box {
            margin-bottom: 20px;
        }

        .translateBtn {
            background-color: aquamarine;
        }

        .card {
            margin-top: 50px;
        }
        /* Thêm CSS nếu cần thiết */
/* Nút chuyển đổi ngôn ngữ - chỉ hiển thị icon */
#swapBtn {
    background-color: transparent; /* Không có nền */
    border: none; /* Không có viền */
    padding: 0; /* Không có khoảng cách bên trong */
    font-size: 1.5em; /* Kích thước của icon */
    cursor: pointer; /* Hiển thị con trỏ khi hover */
    display: inline-flex; /* Hiển thị icon ở dạng inline */
    align-items: center; /* Căn giữa icon theo chiều dọc */
    justify-content: center; /* Căn giữa icon theo chiều ngang */
}

#swapBtn .iconify-icon {
    color: #333; /* Màu sắc của icon */
}


    </style>
</head>

<body>
    <!--  Body Wrapper -->
    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
        data-sidebar-position="fixed" data-header-position="fixed">

        <!-- Sidebar Start -->
        <%- include('sidebar', { userId: userId }) %>
            <!--  Sidebar End -->

            <!--  Main wrapper -->
            <div class="body-wrapper">
                <!--  Header Start -->
                <%- include('header') %>
                    <!--  Header End -->
                    <div class="container-fluid">
                        <div class="card">
                            <div class="card-body">
                                <h1 class="text-center">Translate</h1>

                                <!-- Form nhập văn bản -->
                                <div class="row translate-box">
                                    <div class="col-md-6">
                                        <textarea id="inputText" class="form-control" rows="8"
                                            placeholder="Enter the text to be translated..."></textarea>
                                    </div>
                                    <div class="col-md-6">
                                        <textarea id="outputText" class="form-control" rows="8"
                                            placeholder="Translation results will be displayed here..." readonly></textarea>
                                    </div>
                                </div>
                                <!-- Chọn ngôn ngữ -->
                                <div class="row">
                                    <div class="col-md-5">
                                        <select id="sourceLang" class="form-select">
                                            <option value="en">English</option>
                                            <option value="vi">VietNamese</option>
                                        </select>
                                    </div>
                                    
                                    <!-- Nút chuyển đổi ngôn ngữ -->
                                    <div class="col-md-2 text-center align-self-center">
                                        <button id="swapBtn" class="btn btn-secondary">
                                            <span>
                                                <iconify-icon icon="mi:switch" class="fs-6"></iconify-icon>
                                            </span>
                                        </button>
                                    </div>

                                    <div class="col-md-5">
                                        <select id="targetLang" class="form-select">
                                            <option value="vi">VietNamese</option>
                                            <option value="en">English</option>
                                        </select>
                                    </div>
                                </div>


                                <!-- Nút dịch -->
                                <div class="row mt-3">
                                    <div class="col-12">
                                        <button id="translateBtn" class="btn btn-primary w-100">Translate</button>
                                    </div>
                                </div>


                            </div>
                        </div>

                    </div>
            </div>
    </div>
    <script>
        // Lấy các phần tử DOM
        const swapBtn = document.getElementById('swapBtn');
        const sourceLang = document.getElementById('sourceLang');
        const targetLang = document.getElementById('targetLang');

        // Lắng nghe sự kiện click vào nút chuyển đổi
        swapBtn.addEventListener('click', function() {
            // Hoán đổi giá trị của ngôn ngữ nguồn và ngôn ngữ đích
            const temp = sourceLang.value;
            sourceLang.value = targetLang.value;
            targetLang.value = temp;
        });

    </script>
    <script src="../public/libs/jquery/dist/jquery.min.js"></script>
    <script src="../public/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="../public/libs/apexcharts/dist/apexcharts.min.js"></script>
    <script src="../public/libs/simplebar/dist/simplebar.js"></script>
    <script src="../public/js/sidebarmenu.js"></script>
    <script src="../public/js/app.min.js"></script>
    <script src="../public/js/dashboard.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
    
</body>

</html>